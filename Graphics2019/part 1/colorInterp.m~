function color = colorInterp(A,B,a,b,x)
    %A=[r1 g1 b1]
    %B=[r2 g2 b2]
    %compute r,g,b values with linear interpolation
ab = ( - a); % Total length
ax = (x - a);

% Calculate the color
if a ~= b
    color = (((B - A) / ab ) * ax) + A;
else 
    % if a == b then the color occurs 0(black), so the mean gives better
    % results
    color = (A + B) / 2;
end